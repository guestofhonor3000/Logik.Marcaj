<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcaj.Pages.Tables.AllTables">
    <ContentPage.Content>
        <Grid RowSpacing="0" 
              ColumnSpacing="0"
              BackgroundColor="#66717d">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            
            <ScrollView VerticalScrollBarVisibility="Never">
                <Grid Grid.Column="0" BackgroundColor="#171a1d" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" RowSpacing="10" Margin="0" Padding="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ImageButton Source="MainMeseButton.png" 
                             Grid.Row="0"   
                             x:Name="btnMese" 
                             Clicked="btnMese_Clicked"/>
                <ImageButton Source="MainBarButton.png" 
                             Grid.Row="1" />
                <ImageButton Source="MainPayButton.png" 
                             Grid.Row="2"  
                             x:Name="btnAchita" 
                             Clicked="btnAchita_Clicked"/>
                <ImageButton Source="MainVoidButton.png" 
                             Grid.Row="3" />
                <ImageButton Source="MainRecallButton.png" 
                             Grid.Row="4" />
                <ImageButton Source="MainNoSaleButton.png" 
                             Grid.Row="5" />
                <ImageButton Source="MainPayBackButton.png" 
                             Grid.Row="6"/>
                <ImageButton Source="MainPlaceholderButton.png" 
                             Grid.Row="7"/>
                <ImageButton Source="MainPlaceholderButton.png" 
                             Grid.Row="8" />
                <ImageButton Source="MainPlaceholderButton.png" 
                             Grid.Row="9" />
            </Grid>
            </ScrollView>
           
           
                <ListView Grid.Column="1" 
                          BackgroundColor="#394046"
                          x:Name="lstvwGrupMese" 
                          ItemSelected="lstvwGrupMese_ItemSelected">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                
                                <Frame CornerRadius="10" 
                                       BackgroundColor="#8f99a3" 
                                       Margin="10,10,10,0">
                                    
                                    <Label Text="{Binding TableGroupText}"
                                           VerticalOptions="Center" 
                                           HorizontalOptions="CenterAndExpand"
                                           HorizontalTextAlignment="Center"
                                           FontSize="20" 
                                           FontFamily="Verdana"
                                           FontAttributes="Bold"  
                                           TextColor="White" 
                                           Padding="10"/>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
  

           


                <CollectionView  x:Name="tblLayoutColl" 
                                 SelectedItem="lstvwMese_ItemSelected" 
                                 Grid.Column="2" 
                                 Margin="10">
                     
                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                        <AbsoluteLayout HeightRequest="112"
                                        WidthRequest="140">
                            
                            <Image IsVisible="{Binding Visible}"
                                   Source="{Binding Text}"
                                   AbsoluteLayout.LayoutBounds="0.5,0.5,1,1"
                                   AbsoluteLayout.LayoutFlags="All"
                                   />

                            <Label  Text="{Binding TableText}"
                                        TextColor="White" 
                                        FontSize="26" 
                                        FontFamily="Verdana"  
                                        FontAttributes="Bold" 
                                        BackgroundColor="Transparent"
                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                        AbsoluteLayout.LayoutBounds="0.5,0.36"/>

                                  
                                <Label  FontSize="Micro"
                                        TextColor="White"
                                        FontFamily="Verdana"
                                        FontAttributes="Italic"
                                        Text="{Binding EmpName}"
                                        AbsoluteLayout.LayoutFlags="PositionProportional"
                                        AbsoluteLayout.LayoutBounds="0,0"
                                        />
   
                        </AbsoluteLayout>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
               
     
        
        </Grid>
    </ContentPage.Content>
</ContentPage>