<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcaj.Pages.Settings.Statie.ThemePage">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="btnLight"
                    Style="{DynamicResource btn}"
                    Text="Light Theme"
                    Clicked="btnLight_Clicked"/>
            <Button x:Name="btnDark"
                    Style="{DynamicResource btn}"
                    Text="Dark Theme"
                    Clicked="btnDark_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>