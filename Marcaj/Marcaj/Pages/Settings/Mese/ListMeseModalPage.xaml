<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcaj.Pages.Settings.Mese.ListMeseModalPage" 
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lstvwMese" ItemSelected="lstvwMese_ItemSelected">
                <ListView.Header>
                    <Label VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black" Text="DineInTableText"/>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label VerticalOptions="Center" HorizontalOptions="Center" TextColor="Black" Text="{Binding DineIn.DineInTableText}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>