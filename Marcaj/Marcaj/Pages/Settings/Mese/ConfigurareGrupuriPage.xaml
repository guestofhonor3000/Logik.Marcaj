<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Marcaj.Pages.Settings.Mese.ConfigurareGrupuriPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid   RowSpacing="0" 
               ColumnSpacing="0"  
               BackgroundColor="#66717d">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>

            <StackLayout Grid.Column="0"
                         BackgroundColor="#171a1d"
                         VerticalOptions="Fill"
                         Padding="10"
                         Spacing="10">
                
                <ImageButton  Source="MainSettingsSelectedButton.png" 
                              VerticalOptions="Start"/>
                <ImageButton  Source="MainAddButtton.png" 
                              VerticalOptions="StartAndExpand" 
                              x:Name="btnAddTableGroup" 
                              Clicked="btnAddTableGroup_Clicked"/>
                <ImageButton  Source="MainBackButtton.png" 
                              VerticalOptions="End"/>
            
            </StackLayout>

            <StackLayout Grid.Column="1"
                         BackgroundColor="#394046"
                         VerticalOptions="Fill"
                         Padding="10"
                         Spacing="10">

                <ListView x:Name="lstvwGrupMese" ItemSelected="lstvwGrupMese_ItemSelected">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label VerticalOptions="Center" 
                                           HorizontalOptions="Center" 
                                           FontAttributes="Bold"  
                                           TextColor="White" 
                                           BackgroundColor="#8f99a3" 
                                           Padding="10,20,10,20" Text="{Binding TableGroupText}"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>

            </StackLayout>


            <Grid Grid.Column="2" 
                  BackgroundColor="White"
                  RowDefinitions="{Binding Rows}" 
                  ColumnDefinitions="{Binding Columns}">
                <Grid.GestureRecognizers>
                    <SwipeGestureRecognizer Swiped="SwipeGestureRecognizer_Swiped" />
                </Grid.GestureRecognizers>
            <!--<Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions> 
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>-->

                <BoxView Grid.Column="0" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="1" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="2" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="3" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="4" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="5" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="6" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="7" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="8" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="9" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="10" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                <BoxView Grid.Column="11" Grid.Row="0" Grid.RowSpan="10" BackgroundColor="Blue" WidthRequest="1" VerticalOptions="FillAndExpand" HorizontalOptions="End"/>
                
                <BoxView Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>
                <BoxView Grid.Column="0" Grid.Row="9" Grid.ColumnSpan="12" BackgroundColor="Red" HeightRequest="1" VerticalOptions="End"  HorizontalOptions="FillAndExpand"/>

                <Button Grid.Column="0" Grid.Row="0" TextColor="Black" Text="Unassigned" x:Name="aaCell" Clicked="aaCell_Clicked"/>
            </Grid>

        </Grid>
    </ContentPage.Content>
</ContentPage>